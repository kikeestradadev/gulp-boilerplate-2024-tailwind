mixin example1(cardImage, cardTitle)
	div
		img(src=cardImage, style='width:100px')
		p=cardTitle
div(class='container') 
	-for (var i = 0; i < slider1.length; i++) 
		-var item = slider1[i]
		+example1(item.img, item.title) 
mixin example2(slideImage, slideTitle, sport, league)
	div
		img(src=slideImage, style='width:100px')
		p=slideTitle
		p=sport
		p=league
div(class='container')
	-for (var i = 0; i < example2.length; i++) 
		-var item = example2[i]
		+example2(item.img, item.title, item.category.cat1, item.category.cat2)
